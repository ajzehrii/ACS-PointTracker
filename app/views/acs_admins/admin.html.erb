<!DOCTYPE html>
<head>
    <title>Admin Portal | ACS Texas A&M</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark text-muted">
  <a class="navbar-brand text-warning" href="../admin">
    <%= image_tag("ACS-logo-og.png", width: "30", height: "30") %>
         Admin Portal
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">

    <ul class="navbar-nav navbar-nav-right ml-auto d-lg-flex align-items-center ">
      <li class="nav-item">
        <a class="nav-link" href=<%=admin_path%>>Back</a>
      </li>
      <li class="nav-item dropdown-dark ">
        <a class="nav-link dropdown-toggle " href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= image_tag("ACS-profile.png", width: "30", height: "30") %>
        </a>       
        <div class="dropdown-menu dropdown-menu-right .bg-light" aria-labelledby="navbarDropdownMenuLink">
          <a class="dropdown-item" href="profile">Profile</a>
          <a class="dropdown-item" href=<%=root_path%>>Home</a>
          <div class="dropdown-divider bg-dark"></div>
          <a class="dropdown-item" href=<%=logout_path%>>Logout</a>
        </div>
      </li>
  </div>
</nav>


<center>
<p id="notice"><%= notice %></p>

<h1>Manage Admin Access</h1>

<table>
  <thead>
  <tr>
    <th>Last</th>
    <th>First</th>
    <th>Email</th>
    <th>Student id</th>
    <th>Admin</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.last %></td>
      <td><%= user.first %></td>
      <td><%= user.email %></td>
      <td><%= user.student_id %></td>
      <%if user.email != "adm@n" %>
        <%= form_for(user) do |f| %>
          <td><div class="field">
          <%= f.check_box :admin %>
          </div></td><td>
          <div class="actions">
            <%= f.submit "Update" %>
          </div></td>
        <% end %>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
</table>

<br>

</center>
