<center>
<p id="notice"><%= notice %></p>

<h1>Manage Admin Access</h1>

<table>
  <thead>
  <tr>
    <th>Last</th>
    <th>First</th>
    <th>Email</th>
    <th>Student id</th>
    <th>Admin</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.last %></td>
      <td><%= user.first %></td>
      <td><%= user.email %></td>
      <td><%= user.student_id %></td>
      <%= form_for(user, as: user, url: registration_path(user), html: { method: :put }) do |f| %>
        <td><div class="field">
        <%= f.check_box :admin %>
        </div></td><td>
        <div class="actions">
          <%= f.submit "Update" %>
        </div></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
</table>

<br>

</center>
