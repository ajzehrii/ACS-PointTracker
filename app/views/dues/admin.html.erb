<center>
<p id="notice"><%= notice %></p>

<h1>Manage Dues</h1>

<table>
  <thead>
  <tr>
    <th>Last</th>
    <th>First</th>
    <th>Email</th>
    <th>Student id</th>
    <th>Paid</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.last %></td>
      <td><%= user.first %></td>
      <td><%= user.email %></td>
      <td><%= user.student_id %></td>
      <% n  = 0 %>
      <% @dues.each do |due| %>
        <% if due.student_ID == user.student_id %>
        <td><%= due.paid %></td>
        <% n  = 1 %>
        <% end %>  
      <% end %>
      <% if n ==0%>
      <td>False</td>
       <td>
       <% due = @due %>
        <%= form_with(model: due) do |form| %>
          <div class="field">
          <%= form.hidden_field :student_ID, :value => user.student_id  %>
        </div>

        <div class="field">
          <%= form.label :paid %>
          <%= form.check_box :paid %>
        </div>
        </td>
        <td>
        <div class="actions">
          <%= form.submit %>
        </div>
        </td>
      <% end %> 
        <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

</table>

<br>
<%= button_to "Reset all", remove_all_dues_path, :method => :get, data: { confirm: 'Are you sure you want to reset all member dues?' } %>
</center>
