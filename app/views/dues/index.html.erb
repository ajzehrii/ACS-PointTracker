<p id="notice"><%= notice %></p>

<h1>Dues</h1>

<table>
  <thead>
    <tr>
      <th>Semester id</th>
      <th>Student id</th>
      <th>Paid</th>
      <th>Ammount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dues.each do |due| %>
      <tr>
        <td><%= due.semester_ID %></td>
        <td><%= due.student_ID %></td>
        <td><%= due.paid %></td>
        <td><%= due.ammount %></td>
        <td><%= link_to 'Show', due %></td>
        <td><%= link_to 'Edit', edit_due_path(due) %></td>
        <td><%= link_to 'Destroy', due, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

