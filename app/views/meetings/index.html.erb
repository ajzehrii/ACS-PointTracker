<p id="notice"><%= notice %></p>
<div class="container">
<h1>Meetings!</h1>

<table>
  <thead>
    <tr>
      <th>Meeting id</th>
      <th>Date</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.meeting_ID %></td>
        <td><%= meeting.date %></td>
        <td><%= meeting.name %></td>
        <td><%= meeting.description %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= month_calendar(events: @meetings) do |date,meetings| %>
  <div class="day">
    <%= date.day %>
  </div>
  <% meetings.each do |meeting| %>
    <div class= "card-header">
      <div class="card-title">
        <%= link_to meeting.name, meeting %>
      </div>
    </div>
    <div class="card-body">
    <p class="card-text"><%= meeting.description %> </p>
    </div>
    <div class="card-footer">
    <p class="card-text"> 
      Starts at: <%= meeting.start_time.strftime('%I:%M %p') %>
    </p>
    </div>
    <% end %>
<% end %>


<%= link_to 'New Meeting', new_meeting_path %>
<%= link_to 'Home', home_path %>


</div>