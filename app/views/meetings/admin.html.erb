<center>


<p id="notice"><%= notice %></p>

<h1>Meetings</h1>


<% if @meetings.count == 0 %>
  <div class="text-muted">
  <p> [There are currently no meetings] </p>
  </div>
<%else%>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Name</th>
      <th>Description</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <% minute = "" %>
      <% if meeting.minute < 10 %>
        <%minute = "0"%>
      <%end%>
      <tr>
        <td><%= meeting.date %></td>
        <td><%= meeting.hour %>:<%= minute%><%= meeting.minute %> <%= meeting.format %></td>
        <td><%= meeting.name %></td>
        <td><%= meeting.description %></td>
        <td><%= form_with(model: meeting) do |form| %>

          <div class="field">
            <%= form.check_box :active %>
          </div>
          </td>
          <td>
          <div class="actions">
            <%= form.submit "update" %>
          </div>
          </td>
        <% end %>


        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>

<br>

<%= link_to 'New Meeting', new_meeting_path %>


</center>

