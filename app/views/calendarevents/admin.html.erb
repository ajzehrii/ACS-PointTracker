<center>

<p id="notice"><%= notice %></p>
<div class="container">
<h1>Calendarevents</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Description</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @meetings.each do |meeting| %>
    <tr>
      <td><%= meeting.date %></td>
      <td><%= meeting.name %></td>
      <td><%= meeting.description %></td>
      <td><%= form_with(model: meeting) do |form| %>

        <div class="field">
          <%= form.check_box :active %>
        </div>
        </td>
        <td>
        <div class="actions">
          <%= form.submit "update" %>
        </div>
        </td>
      <% end %>


      <td><%= link_to 'Show', meeting %></td>
      <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
      <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
    </tr>
  <% end %>
  </tbody>
</table>


<%= month_calendar(events: @meetings) do |date, meetings| %>
        <div class="day">    
            <%= date.day %>
            
        </div>
        <% meetings.each do |meeting| %>
            <div class="card-header">
            <div class="card-title">
                <%= meeting.name %>
                </div>
            </div>
            <% end %>
        <% end %>

    

<br>

<%= link_to 'New Meeting', new_meeting_path %>

</div>

</center>