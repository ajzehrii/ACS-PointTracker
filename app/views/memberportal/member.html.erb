<center>

<p id="notice"><%= notice %></p>
<div class="container">

<% count = 0 %>
<% @meetings.each do |meeting| %>
  <% if meeting.active %>
  <% count = 1 %>
  <%end%>
  <%end%>
<% if count == 0  %>
  <p> [There are currently no active meetings] </p>
<%else%>
<table>
  <thead>
    <tr>
      <th>Date&nbsp</th>
      <th>Time&nbsp</th>
      <th>Name&nbsp</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <p>Date/Time: <span id="date"></span></p><script>n =  new Date(); 
    y = n.getFullYear();
    m = n.getMonth() + 1;
    d = n.getDate();
    document.getElementById("date").innerHTML = y + "-" + m + "-" + d; </script> 
    <% @meetings.each do |meeting| %>
      <% if meeting.active %>
        <tr>
          <td><%= meeting.date %></td>
          <td><%= meeting.hour %>:<%= meeting.minute %> <%= meeting.format %></td>
          <td><%= meeting.name %></td>
          <td><%= meeting.description %></td>
          <td>
          <%= form_with(model: @attendance) do |form| %>
              <div class="field">
              <%= form.hidden_field :student_ID, :value => current_user.student_id  %>
              </div>
              <div class="field">
                <%= form.hidden_field :meeting_ID, :value => meeting.meeting_ID  %>
              </div>
              </td>
              <% n  = 0 %>
            <% @attendances.each do |attendance| %>
              <% if attendance.student_ID == current_user.student_id && meeting.meeting_ID == attendance.meeting_ID %>
                <td>Signed in </td>
                <% n  = 1 %>
              <% end %>
              <% end %> 
              <% if n  == 0 %>
              <td>
            
              <div class="actions">
                <%= form.submit "Sign in" %>
              </div>
              </td>
            <% end %> 
          <% end %> 
        </tr>
      <% end %> 
    <% end %>
  </tbody>
</table>
<%end%>



    
<%= month_calendar(events: @meetings) do |date, meetings| %>
        <div class="day">    
            <%= date.day %>
            
        </div>
        <% meetings.each do |meeting| %>
            <div class="card-header">
              <div class="card-title">
                  <%= meeting.hour %>:<%= meeting.minute %> <%= meeting.format %> | <%= meeting.name %>
                  </div>
              </div>
            <% end %>
        <% end %>



<br>

<br>


<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @meetings.each do |meeting| %>
    <tr>
      <td><%= meeting.date %></td>
      <td><%= meeting.name %></td>
      <td><%= meeting.description %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<p id="notice"><%= notice %></p>



<br>


</center>